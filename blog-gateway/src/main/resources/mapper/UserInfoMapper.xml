<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tarrasques.blog.gateway.mapper.UserInfoMapper">

    <resultMap id="BaseResultMap" type="com.tarrasques.blog.commons.entity.UserInfo">
        <!--@Table user_info-->
        <result property="id" column="id" jdbcType="VARCHAR"/>
        <result property="account" column="account" jdbcType="VARCHAR"/>
        <result property="userName" column="user_name" jdbcType="VARCHAR"/>
        <result property="userPassword" column="user_password" jdbcType="VARCHAR"/>
        <result property="avatarUrl" column="avatar_url" jdbcType="VARCHAR"/>
        <result property="roleCode" column="role_code" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="loginTime" column="login_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Where_Clause">
        <where>
            <if test="id != null and id != ''">
                and id = #{id}
            </if>
            <if test="account != null and account != ''">
                and account = #{account}
            </if>
            <if test="userName != null and userName != ''">
                and user_name = #{userName}
            </if>
            <if test="userPassword != null and userPassword != ''">
                and user_password = #{userPassword}
            </if>
            <if test="avatarUrl != null and avatarUrl != ''">
                and avatar_url = #{avatarUrl}
            </if>
            <if test="roleCode != null and roleCode != ''">
                and role_code = #{roleCode}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
            <if test="loginTime != null">
                and login_time = #{loginTime}
            </if>
        </where>
    </sql>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select id,
               account,
               user_name,
               user_password,
               avatar_url,
               role_code,
               create_time,
               login_time
        from user_info
        where id = #{id}
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into user_info(id, account, user_name, user_password, avatar_url, role_code, create_time, login_time)
        values (#{id}, #{account}, #{userName}, #{userPassword}, #{avatarUrl}, #{roleCode}, #{createTime}, #{loginTime})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update user_info
        <set>
            <if test="account != null and account != ''">
                account = #{account},
            </if>
            <if test="userName != null and userName != ''">
                user_name = #{userName},
            </if>
            <if test="userPassword != null and userPassword != ''">
                user_password = #{userPassword},
            </if>
            <if test="avatarUrl != null and avatarUrl != ''">
                avatar_url = #{avatarUrl},
            </if>
            <if test="roleCode != null and roleCode != ''">
                role_code = #{roleCode},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="loginTime != null">
                login_time = #{loginTime},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from user_info
        where id = #{id}
    </delete>

</mapper>

